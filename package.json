{
  "name": "spec-trace",
  "version": "0.1.2",
  "description": "A library for linking system requirements with test cases and measuring specification coverage",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "bin": {
    "spec-trace": "./dist/cli.js"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "biome lint ./src",
    "format": "biome format --write ./src",
    "check": "biome check --write ./src",
    "debug": "node dist/cli.js",
    "debug:help": "node dist/cli.js --help",
    "debug:ts": "ts-node src/cli.ts",
    "prepublishOnly": "pnpm run clean && pnpm run build"
  },
  "keywords": [
    "requirements",
    "specifications",
    "tests",
    "coverage",
    "traceability"
  ],
  "author": "seitaro",
  "license": "MIT",
  "dependencies": {
    "commander": "^14.0.0",
    "glob": "^11.0.2",
    "marked": "^15.0.11",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/glob": "^8.1.0",
    "@types/marked": "^5.0.1",
    "@types/node": "^24.0.3",
    "rimraf": "^6.0.1",
    "typescript": "^5.1.6",
    "vitest": "^3.1.3"
  },
  "peerDependencies": {
    "typescript": ">=4.5.0"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}